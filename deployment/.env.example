PORT=8000
NODE_ENV=production

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=generated_secure_password
DB_DATABASE=portyo

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Security
SESSION_SECRET=change_me_to_something_random
JWT_SECRET=change_me_to_at_least_32_chars_random_string

# URLs
# NOTE: Frontend will be accessible on port 80 via Nginx, so we use the domain
FRONTEND_URL=https://portyo.me
BACKEND_URL=https://api.portyo.me
CORS_ORIGIN=https://portyo.me

# SaaS / Custom domain automation
SAAS_BASE_DOMAIN=portyo.me
COMPANY_SUBDOMAIN=company.portyo.me
CUSTOM_DOMAIN_CNAME_TARGET=cname.portyo.me
CUSTOM_DOMAIN_CERTBOT_EMAIL=admin@portyo.me
CUSTOM_DOMAIN_REQUIRE_CNAME_ONLY=true

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (SMTP or Mailgun)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=password
